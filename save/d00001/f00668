$(function() {

$('.objectStorageCalc').find('input').focusout( function(event) {
    currentInputId = this.id;
    handleCalculatorInputFields(event, currentInputId);
});

$('.objectStorageCalc').find('input').keyup( function(event) {
    currentInputId = this.id;
    handleCalculatorInputFields(event, currentInputId); 
});

$('#object_storage_calc_submit_button').click( function() {
    calculateObjectStoragePrice();
});

function handleCalculatorInputFields(event, currentInputId) {

    if (event.type == 'keyup') {
        if (event.which != 13) return false;
    }

    if (currentInputId.indexOf('input') != -1) {
        calculateObjectStoragePrice();
    }

    return true;

}

function calculateObjectStoragePrice() {
    var totalStorage    = $('#object_storage_gb_input').val() * 0.10;
    var totalBandwidth  = $('#object_storage_bandwidth_input').val() * 0.12;
    var totalPrice      = totalStorage + totalBandwidth;
    $('#object_storage_total_display').val('$' + totalPrice.toFixed(2));
}


});
