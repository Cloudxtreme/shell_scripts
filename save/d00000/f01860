<script type="text/javascript" src="/etc/designs/citrix/clientlibs/mobile.1.28.0.40.js"></script>
<link rel="stylesheet" href="/etc/designs/citrix/clientlibs/mobile.1.28.0.40.css" type="text/css">


<script type="text/javascript">
jQuery(document).ready(function () {
    //Initiate ipad over
    ipadOverlay();
});

var ipadOverlay = function () {
  var self = this,
      $document = jQuery(document),
      overlayCls = ".widget-app-overlay",
      $appOverlay = jQuery(overlayCls);

  jQuery("#tablet-overlay-open").click(function (e) {
    e.stopImmediatePropagation();
    e.preventDefault();
    open();
  });

  jQuery("#tablet-overlay-close").click(function (e) {
    e.stopImmediatePropagation();
    e.preventDefault();
    close();
  });

  if (isMobile.iPad()) {
    jQuery(".widget-app-overlay.iPad").show();
  }

  function open () {
    $appOverlay.addClass("open");

    $document.bind('touchstart', function (event) {
        if(jQuery(event.target).parents(overlayCls).length < 1) {
            close();
        }
    });
  }

  function close() {
    $appOverlay.removeClass("open");

    //unbind the click event for the document once the panel is closed
    $document.unbind('touchstart');
  }

  return {
    open:open,
    close:close
  }
}
</script>


