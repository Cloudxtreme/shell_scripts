<script  type="text/javascript">
function installXPI(href)
{
    if (typeof(InstallTrigger) != 'undefined')
    {
        var xpi = {'Firebug': href};
        InstallTrigger.install(xpi);
    }
    else
    {
        alert("You must be using Firefox to install this extension.");
    }
}

function run(id) 
{
    try 
    {
        var form = document.createElement("form");
        form.setAttribute("action", "http://www.softwareishard.com/domplate/runner/index.php");
        form.setAttribute("method", "POST");
        form.setAttribute("style", "display:none");

        var parts = ["script", "data", "css"];
        for (var i=0; i<parts.length; i++) 
        {
            var part = document.getElementById(id+"-"+parts[i]);
            if (!part)
                continue;
            var input = document.createElement("input");
            input.setAttribute("name", parts[i]);          
            input.setAttribute("value", part.innerHTML);
            form.appendChild(input);
        }

        document.body.appendChild(form);
        form.submit();     
    } 
    catch (err) 
    {
        alert("Error: " + err);
    }  
}
</script>

