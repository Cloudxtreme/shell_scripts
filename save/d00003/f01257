<div id="topImageStack" style="display:none;"><img src="http://www.kmd.keio.ac.jp/topimage/img/topimage.jpg" /><img src="http://www.kmd.keio.ac.jp/topimage/img/image4.jpg" /><img src="http://www.kmd.keio.ac.jp/topimage/img/image3.jpg" /></div>
<script type="text/javascript">
var topImageList = [ [207, "#"],[102, "../en/studios/"],[101, "/en/studios/"],"" ];
var topImageNow = 0;
var topImageTimer = 0;
var topImageLoopFunc = function() {
$('#topImageLink').attr('href', topImageList[topImageNow][1]);
$('.topImageSwitch').attr('src', '/img/topimage/off.gif');
$('#topImageSwitch'+topImageList[topImageNow][0]).attr('src', '/img/topimage/on.gif');
$('#topImageStack img').css('display','none');
$('#topImageStack').css('display','');
$('#topImageStack img:nth-child('+(topImageNow+1)+')').fadeIn("slow", function() {
topImageNow++;
if(topImageNow>=topImageList.length-1) topImageNow = 0;
topImageTimer = setTimeout("topImageLoopFunc()", 10000);
});
};
var topImageSwitchFunc = function(){
var re = new RegExp("[0-9]+");
var id = re.exec(this.id);
for(var i=0; i<topImageList.length-1; i++) {
if(topImageList[i][0]==id) {
topImageNow = i;
clearTimeout(topImageTimer);
topImageLoopFunc();
}
}
}
$('.topImageSwitch').click(topImageSwitchFunc);
topImageLoopFunc();
if (typeof document.body.style.maxHeight == "undefined") {
$('#topImageFrame').attr("src", "/img/topimage/frame.gif");
}
</script>

