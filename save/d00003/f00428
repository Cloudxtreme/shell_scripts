		function show_p4uad(id){
			$(id+'_h').down('script').remove();
			if(typeof $(id+'_h').down('style')!='undefined'){
				$(id+'_h').down('style').remove();
			}
			var html = $(id+'_h').innerHTML;
			if (html != '') {
				$(id).update(html);
			}
		}
